<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstAppWithMenu.Views.SettingsPage"
             Title="Настройки">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <BoxView HeightRequest="20" />
            <!-- Промежуток для визуального разделения -->
            <Button Text="Свяжитесь с нами" Clicked="ContactButton_Clicked" BorderColor="Gray" BorderWidth="1" HorizontalOptions="FillAndExpand" Margin="10, 0" />
            <Button Text="О приложении" Clicked="AboutAppButton_Clicked" BorderColor="Gray" BorderWidth="1" HorizontalOptions="FillAndExpand" Margin="10, 0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>